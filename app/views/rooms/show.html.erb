<% @entries.each do |e| %>
  <h2><%= e.user.name %>さんとのチャット</h2>
<% end %>

<div class="chats">
  <div class="chat">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <%= m.message %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="posts">
  <%= form_with model: @message, local: true do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.submit "送信" %>
  <% end %>
</div>